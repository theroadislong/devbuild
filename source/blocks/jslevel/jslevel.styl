.jslevel
	margin-bottom 14px

	&__heading
		section-heading()
		margin-bottom 13px

	&__slider
		position relative
		margin-bottom 30px

	&__slider-img
		position absolute
		top 14px

	track() 
		width 100%
		height 10px
		cursor pointer
		background-color transparent
		background-position 0 -26px
		background-repeat no-repeat
		background-size auto

	thumb()
		height 13px
		width 17px
		cursor pointer
		border none
		background-color transparent
		background-image url("../img/jslevel-triangle.png")
		background-repeat no-repeat
		margin-top -6px

	&__input
		-webkit-appearance none
		width 100%
		background-color transparent
		margin 0

		&:focus
			outline none

		&::-webkit-slider-runnable-track
			background-color transparent
			track()
			
		
		&::-webkit-slider-thumb
			thumb()
			-webkit-appearance none

		&::-moz-range-track
			track()
			background-color transparent

		&::-moz-range-thumb
			thumb()

		&::-ms-track
			track()
			background-color transparent
			border-color transparent
			color transparent

		&::-ms-thumb
			thumb()
	&__list
		margin 0
		padding 0
		list-style none
		display flex
		justify-content space-between
	&__item
		max-width 175px
	&__level
		font-size 13px
		font-family 'PT Sans', sans-serif
		font-weight 700
		line-height 19px
		color #2f1b15