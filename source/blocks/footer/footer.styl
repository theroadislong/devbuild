.footer
	display flex
	flex-wrap wrap
	align-items flex-start
	@media (max-width: 700px)
		justify-content center

	&__data
		font-size 22.43px
		line-height 49.83px
		font-family 'PT Sans', sans-serif
		font-weight 700
		margin 0
		margin-right 20px

	&__date
		padding-left 8px
		margin-top -10px
		margin-bottom 0
		padding-bottom 20px
		padding-right 16px
		font-family 'Courier New', monospace
		font-size 30px
		line-height 36px
		font-weight 400
		color #000000
		background-image url('../img/footer-underline.png')
		background-repeat no-repeat
		background-position 0px 34px
